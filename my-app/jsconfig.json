{
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
		"target": "ES6",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@components/*": ["./src/components/*"],
			"@views/*": ["./src/views/*"],
			"@styles/*": ["./src/styles/*"],
			"@services/*": ["./src/services/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
